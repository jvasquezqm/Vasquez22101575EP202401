<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/tvMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MENU"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnPrizes"
        app:layout_constraintTop_toBottomOf="@+id/tvLogo"
        tools:layout_editor_absoluteX="0dp" />


    <Button
        android:id="@+id/btnPrizes"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="120dp"
        android:text="PRIZES"
        app:layout_constraintBottom_toTopOf="@+id/btnTeams"
        app:layout_constraintTop_toTopOf="@+id/tvMenu"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnTeams"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="TEAMS"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="174dp"
        app:layout_constraintTop_toBottomOf="@+id/btnPrizes"
        app:layout_constraintBottom_toTopOf="@+id/btnStadiums"/>

    <Button
        android:id="@+id/btnStadiums"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="150dp"
        android:text="STADIUMS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTeams"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/tvLogo"
        android:layout_width="243dp"
        android:layout_height="185dp"
        app:layout_constraintBottom_toTopOf="@+id/tvMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMenu"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logocopamer" />


</androidx.constraintlayout.widget.ConstraintLayout>